<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jannick.lipastreaming.activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_info_container"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_tag_username"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/colorPrimaryText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            android:id="@+id/tv_account_username"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_tag_email"
            android:layout_height="wrap_content"
            android:text="E-Mail:"
            android:textColor="@color/colorPrimaryText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_account_email"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_tag_device"
            android:layout_height="wrap_content"
            android:text="Selected device:"
            android:textColor="@color/colorPrimaryText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_account_device_id"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>



    <com.jannick.lipastreaming.views.MyGridView
        android:id="@+id/main_grid_container"
        android:layout_below="@id/main_info_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:numColumns="2"
        />

</RelativeLayout>
